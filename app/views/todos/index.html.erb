	<main class="TodoPage">
		<article>
			<h1 class="Todopage-title">My Todo-list</h1>
			<section class="TodoSection-head">
				<input class="AppendTodo-text" type="text" placeholder="What's next?" />
				<input class="AppendTodo-text" type="date" placeholder="dd-mm-yyyy" />
				<input class="AppendTodo-button AddTodo-button" type="button" value="Add" />
			</section>
      <%= render partial: "todo-section", locals: { section_title: "Overdue",
                                                    todos: Todo.overdue,
                                                    show_due_date: true } %>
			<%= render partial: "todo-section", locals: { section_title: "Due Today",
                                                 todos: Todo.due_today,
                                                 show_due_date: false } %>
			<%= render partial: "todo-section", locals: { section_title: "Due Later",
                                                 todos: Todo.due_later,
                                                 show_due_date: true } %>

			</article>
	</main>
